{
  "manifest_version": 3,
  "name": "Chameleon",
  "version": "2.0.0",
  "description": "Transform any webpage with custom CSS & JS - Advanced injection tool with profiles, snippets, and live reload",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs",
    "webNavigation",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Chameleon",
    "default_popup": "quick-toggle/quick-toggle.html"
  },
  "devtools_page": "devtools/devtools.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open Chameleon"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected/*", "lib/jquery.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
